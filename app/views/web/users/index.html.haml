%ul.nav.nav-pills{:style => 'width:100%;padding-left:0;margin-bottom:-60px;'}
  %li{:style => 'width:50%;'}= link_to 'Роли', roles_path #, :data => {:toggle => :tab }
  %li.active{:style => 'width:50%;'}= link_to 'Пользователи', users_path #, :data => {:toggle => :tab }
.tab-content
  .tab-pane#roles
    -##roles-content
      = render 'roles',
        :array => @roles
  .tab-pane#users.active
    = render 'users',
      :array => @users