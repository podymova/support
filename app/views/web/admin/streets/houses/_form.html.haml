= simple_form_for(value, :url => url, :html => {:class => "form-horizontal" }) do |f|
  .form-line
    = f.input :st_short, :as => :hidden
    = f.input :number, :input_html => { :id => 'LoginForm_login'}
  .form-line
    = f.input :entrances, :input_html => { :id => 'LoginForm_login', :min => 1}
  .form-line
    = f.input :floors, :input_html => { :id => 'LoginForm_login', :min => 1}
  .form-line
    = f.input :state, :as => :state_select_via_transition, :input_html => { :id => 'LoginForm_login'}
  %br
  = f.submit message, :class => 'btn btn-small btn-danger'