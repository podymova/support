- content_for :back  do
  = link_to 'Назад', admin_streets_path, :type => "reset"

- content_for :title  do
  = value.name

= render 'shared/admin/error_messages', :errors => value.errors
%br

= simple_form_for(value, :url => url, :html => {:class => "form-horizontal" }) do |f|
  .form-line
    = f.input :short, :input_html => { :id => 'LoginForm_login'}
  .form-line
    = f.input :name, :input_html => { :id => 'LoginForm_login'}
  .form-line
    = f.input :state, :as => :state_select_via_transition, :input_html => { :id => 'LoginForm_login'}
  %br
  = f.submit message, :class => 'btn btn-small btn-danger'
