- content_for :back  do
  = link_to 'Назад', hardwares_path, :type => "reset"

- content_for :title  do
  = hardware.name
  

= simple_form_for(hardware, :url => url) do |f|
  .form-line
    = f.input :name, :required => false, :input_html => { :id => 'LoginForm_login'}
  .form-line
    = f.input :order, :input_html => { :id => 'LoginForm_login', :min => 0}
  .form-line
    = f.input :state, :as => :state_select_via_transition, :input_html => { :id => 'LoginForm_login'}    
  %br
  = f.submit 'Сохранить', :class => 'btn btn-small btn-danger'