- content_for :back  do
  = link_to 'Назад', cabels_path, :type => "reset"

- content_for :title  do
  = value.inumber

-#= render 'shared/inventory/error_messages', :errors => value.errors
%br

= simple_form_for(value, :url => url, :from_url => from_url, :html => {:class => "form-horizontal" }) do |f|
  .form-line
    = f.input :inumber, :required => false, :input_html => { :id => 'LoginForm_login'}
  .form-line
    =f.association :tcabel, :required => false, :input_html => { :id => 'LoginForm_login'}
  .form-line
    = f.input :length, :input_html => { :id => 'LoginForm_login'}
  .form-line
    = f.input :state, :as => :state_select_via_transition, :input_html => { :id => 'LoginForm_login'}
  .form-line
    = f.input :comment, :as => :ckeditor, :input_html => { :id => 'LoginForm_login'}
  %br
  = f.submit t('web.admin.save'), :class => 'btn btn-small btn-danger'


